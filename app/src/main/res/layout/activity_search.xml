<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".search">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchtext"
        android:layout_width="270dp"
        android:layout_height="94dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/multicolore"
        android:letterSpacing="-0.04"
        android:text="SNACK\nAUDIOBOOK"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchedit"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/searchshape"
        android:hint="검색어를 입력해주세요"
        android:paddingStart="44dp"
        android:textColorHint="#CCFFFFFF"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchtext" />

    <ImageView
        android:layout_width="19dp"
        android:layout_height="18dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/icon_white"
        app:layout_constraintBottom_toBottomOf="@+id/searchedit"
        app:layout_constraintStart_toStartOf="@+id/searchedit"
        app:layout_constraintTop_toTopOf="@+id/searchedit" />

    <TextView
        android:id="@+id/recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/suitsemibold"
        android:text="추천 검색어"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchedit" />


    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/bnv_main"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@drawable/menubar"
        android:padding="3dp"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu" />

    <Button
        android:id="@+id/recsearch1"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:background="@drawable/searchcontent"
        app:layout_constraintTop_toBottomOf="@+id/recommend"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:drawableStart="@drawable/searchrec"
        android:paddingLeft="10dp"
        android:drawablePadding="-15dp"
        android:fontFamily="@font/suit"
        android:text="신용우"
        android:textSize="14dp"
        />
    <Button
        android:id="@+id/recsearch2"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:background="@drawable/searchcontent"
        app:layout_constraintTop_toBottomOf="@+id/recommend"
        app:layout_constraintStart_toEndOf="@+id/recsearch1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/searchrec"
        android:paddingLeft="10dp"
        android:drawablePadding="-15dp"
        android:fontFamily="@font/suit"
        android:text="김도형"
        android:textSize="14dp"
        />
    <Button
        android:id="@+id/recsearch3"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:background="@drawable/searchcontent"
        app:layout_constraintTop_toBottomOf="@+id/recommend"
        app:layout_constraintStart_toEndOf="@+id/recsearch2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/searchrec"
        android:paddingLeft="10dp"
        android:drawablePadding="-15dp"
        android:fontFamily="@font/suit"
        android:text="안시하"
        android:textSize="14dp"
        />
    <Button
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:background="@drawable/searchcontent"
        app:layout_constraintTop_toBottomOf="@+id/recommend"
        app:layout_constraintStart_toEndOf="@+id/recsearch3"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/searchrec"
        android:paddingLeft="10dp"
        android:drawablePadding="-15dp"
        android:fontFamily="@font/suit"
        android:text="박지윤"
        android:textSize="14dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>