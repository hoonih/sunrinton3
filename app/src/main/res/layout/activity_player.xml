<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2E2E2E"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">

    <ImageView
        android:id="@+id/biglemon"
        android:layout_width="209dp"
        android:layout_height="324dp"
        android:src="@drawable/smallking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp">
    </ImageView>

    <TextView
        android:id="@id/biglemont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/suitsemibold"
        android:text="어린왕자"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/biglemon"></TextView>

    <ImageView
        android:id="@+id/viewww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vieww"
        app:layout_constraintTop_toBottomOf="@+id/biglemont"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp">
    </ImageView>
    <TextView
        android:id="@+id/viewtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.6만회"
        android:textSize="16sp"
        android:fontFamily="@font/suit"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/viewww"
        app:layout_constraintTop_toBottomOf="@id/biglemont"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp">
    </TextView>
    <ImageView
        android:id="@+id/starr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star"
        app:layout_constraintStart_toEndOf="@+id/viewtt"
        app:layout_constraintTop_toBottomOf="@id/biglemont"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp">
    </ImageView>
    <TextView
        android:id="@+id/starrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.6점"
        android:textSize="16sp"
        android:fontFamily="@font/suit"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/starr"
        app:layout_constraintTop_toBottomOf="@id/biglemont"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp">
    </TextView>
    <ImageView
        android:id="@+id/dload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/download"
        app:layout_constraintStart_toEndOf="@+id/starrr"
        app:layout_constraintTop_toBottomOf="@id/biglemont"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp">
    </ImageView>
    <TextView
        android:id="@+id/dloadt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.3만 회"
        android:textSize="16sp"
        android:fontFamily="@font/suit"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/dload"
        app:layout_constraintTop_toBottomOf="@id/biglemont"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/suitsemibold"
        android:text="작가 : 앙투앙 드 생텍쥐페리"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewww"></TextView>

    <TextView
        android:id="@+id/boicer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="476dp"
        android:fontFamily="@font/suitsemibold"
        android:text="성우 : 김도형, 홍예훈, 박선후, 안시하, 홍수진"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/timedelta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/suitsemibold"
        android:text="총 재생 시간 : 3시간 37분"
        android:textColor="#D2D2D2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="533dp"></TextView>

    <FrameLayout
        android:id="@+id/firstframe"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3F3E3C"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="588dp"></FrameLayout>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="350dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/firstframe"
        android:progress="50">
    </SeekBar>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seekbar"
        android:gravity="center_horizontal">

        <ImageButton
            app:layout_constraintTop_toBottomOf="@+id/seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="none"
            android:src="@drawable/skip_previous"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toStartOf="@id/play_btn"/>
        <ImageButton
            android:layout_marginTop="15dp"
            android:id="@+id/play_btn"
            app:layout_constraintTop_toBottomOf="@+id/seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="none"
            android:src="@drawable/play_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageButton
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="none"
            android:src="@drawable/skip_next"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toEndOf="@+id/play_btn"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>