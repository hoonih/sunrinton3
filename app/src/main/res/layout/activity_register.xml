<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/highlight"
        app:layout_constraintBottom_toBottomOf="@+id/logintext"
        android:layout_marginBottom="43dp"
        app:layout_constraintStart_toStartOf="@+id/logintext"
        />
    <TextView
        android:id="@+id/logintext"
        android:fontFamily="@font/suitsemibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다, \n앞으로 잘부탁드려요!"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="200dp"/>


    <EditText
        android:id="@+id/edittextemail"
        android:fontFamily="@font/suitregular"
        android:hint="이메일를 입력해 주세요"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_width="355dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/logintext"
        android:layout_marginTop="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edittextpassword"
        android:hint="비밀번호를 입력해 주세요"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:inputType="textPassword"
        android:backgroundTint="#FFFFFF"
        android:layout_width="355dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/edittextemail"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edittextrepass"
        android:hint="비밀번호를 재입력해 주세요"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_width="355dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/edittextpassword"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="365dp"
        android:layout_height="51dp"
        android:background="@drawable/loginbutton"
        android:fontFamily="@font/suitsemibold"
        android:text="회원가입"
        android:textColor="@color/white"

        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextrepass"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/loginbutton"
        android:fontFamily="@font/suitsemibold"
        android:layout_width="365dp"
        android:layout_height="51dp"
        app:layout_constraintTop_toBottomOf="@+id/registerbutton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/registerbutton"
        android:text="로그인"
        android:textColor="#162D59"
        android:textSize="17sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>